@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to the Caching Demo</h1>
</div>

<div class="container">
    <div class="row col-md-10">
        <h3>Products</h3>
        <table class="table table-striped table-hover table-bordered table-light">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Price [$]</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model.Products)
                {
                    <tr>
                        <td>@product.Id</td>
                        <td>@product.Name</td>
                        <td>@product.Price</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>